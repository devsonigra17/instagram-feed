<?xml version="1.0" ?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget class="Dev\InstagramFeed\Block\Widget\Feed" id="instagram_feed">
        <label>Instagram Feed Widget</label>
        <description>Instagram</description>
        <parameters>
            <parameter name="status" visible="true" xsi:type="select" required="true">
                <label>Status</label>
                <options>
                    <option name="enable" value="1"><label>Enable</label></option>
                    <option name="disable" value="0"><label>Disable</label></option>
                </options>
            </parameter>
            <parameter name="title" visible="true" xsi:type="text" required="true">
                <label translate="true">Title</label>
            </parameter>
            <parameter name="access_token" visible="true" xsi:type="text" required="true">
                <label translate="true">User Access Token</label>
            </parameter>
            <parameter name="layout" visible="true" xsi:type="select" required="true">
                <label translate="true">Layout</label>
                <options>
                    <option name="slider" value="1"><label>Slider</label></option>
                    <option name="grid" value="2"><label>Grid</label></option>
                </options>
            </parameter>
        </parameters>
    </widget>
</widgets>

